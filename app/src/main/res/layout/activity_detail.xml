<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_animal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/animal_picture"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_latin_name"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Siamang" />

        <TextView
            android:id="@+id/tv_latin_name"
            style="@style/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="Hylobates syndactylus" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_animal">

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/type" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/active_time" />

                <TextView
                    android:id="@+id/tv_active_time"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/length_min" />

                <TextView
                    android:id="@+id/tv_length_min"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/length_max" />

                <TextView
                    android:id="@+id/tv_length_max"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/weight_min" />

                <TextView
                    android:id="@+id/tv_weight_min"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/weight_max" />

                <TextView
                    android:id="@+id/tv_weight_max"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/lifespan" />

                <TextView
                    android:id="@+id/tv_lifespan"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/habitat" />

                <TextView
                    android:id="@+id/tv_habitat"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/diet" />

                <TextView
                    android:id="@+id/tv_diet"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>

            <TableRow android:layout_marginTop="8dp">

                <TextView
                    style="@style/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/geo_range" />

                <TextView
                    android:id="@+id/tv_geo_range"
                    style="@style/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem" />
            </TableRow>


        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>